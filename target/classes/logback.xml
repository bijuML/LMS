<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" status="INFO"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{dd-MM-yyyy HH:mm:ss} %magenta([%thread])
				%highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
		</encoder>
	</appender>


	<timestamp key="myTimestamp" datePattern="yyyy-MM-dd'_'HH-mm" />
	<appender name="FILE" status="INFO"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../logs/logfiles${myTimestamp}.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/logs/logfiles.%d{yyyy-MM}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>1MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n</pattern>
		</encoder>
	</appender>
	<appender name="OPPORTUNITY-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/opportunity_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="opportunityPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="OPPORTUNITY-PERFORMENCE" />
	</logger>
	<appender name="NOTIFICATION-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/notification_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="notificationPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="NOTIFICATION-PERFORMENCE" />
	</logger>
	<appender name="EXPIRY-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/expiry_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="expiryPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="EXPIRY-PERFORMENCE" />
	</logger>
	<appender name="DHS-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/dhs_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="dhsPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="DHS-PERFORMENCE" />
	</logger>

	<appender name="GSA-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/gsa_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="gsaPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="GSA-PERFORMENCE" />
	</logger>

	<appender name="DOTFORECAST-PERFORMENCE"
		class="ch.qos.logback.core.FileAppender">
		<file>logs/DOTForecast_performence_report${myTimestamp}.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd_HH:mm}-%-4relative [%thread] %-5level
				%logger{35} - %msg %n
			</pattern>
		</encoder>
	</appender>
	<logger name="DOTForecastPerformenceLog" level="DEBUG"
		additivity="false">
		<appender-ref ref="DOTFORECAST-PERFORMENCE" />
	</logger>
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
	<root>
		<appender-ref ref="FILE" />
		<!-- <appender-ref ref="STDOUT" /> -->
	</root>
</configuration>